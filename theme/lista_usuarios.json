{
  "list_frame": {
    "fg_color": "#111111",
    "pack": {
      "side": "right",
      "fill": "both",
      "expand": true,
      "padx": [10, 0]
    }
  },
  "title_label": {
    "text": "Usuarios Registrados",
    "font": ["Segoe UI", 16, "bold"],
    "text_color": "#00FFAA",
    "pack": {
      "pady": [20, 20]
    }
  },
  "table_frame": {
    "fg_color": "#000000",
    "pack": {
      "fill": "both",
      "expand": true,
      "padx": 20,
      "pady": [0, 20]
    }
  },
  "treeview": {
    "columns": ["Usuario", "Rol", "Estado", "Último Acceso"],
    "show": "headings",
    "height": 15,
    "columns_config": {
      "Usuario": {"width": 120, "anchor": "center"},
      "Rol": {"width": 120, "anchor": "center"},
      "Estado": {"width": 120, "anchor": "center"},
      "Último Acceso": {"width": 120, "anchor": "center"}
    },
    "style": {
      "background": "#000000",
      "foreground": "#00FFAA",
      "rowheight": 25,
      "fieldbackground": "#000000",
      "heading_background": "#111111",
      "heading_foreground": "#00FFAA",
      "heading_font": ["Segoe UI", 10, "bold"],
      "selected_background": "#222222"
    }
  },
  "action_frame": {
    "fg_color": "#111111",
    "pack": {
      "pady": [0, 20]
    }
  },
  "buttons": {
    "eliminar_usuario": {
      "text": "Eliminar Usuario",
      "fg_color": "#FF3333",
      "text_color": "#FFFFFF",
      "width": 120,
      "height": 32,
      "pack": {"side": "left", "padx": 5}
    },
    "cambiar_estado": {
      "text": "Cambiar Estado",
      "fg_color": "#FFAA00",
      "text_color": "#000000",
      "width": 120,
      "height": 32,
      "pack": {"side": "left", "padx": 5}
    },
    "refrescar": {
      "text": "Refrescar",
      "fg_color": "#00AAFF",
      "text_color": "#FFFFFF",
      "width": 120,
      "height": 32,
      "pack": {"side": "left", "padx": 5}
    }
  }
}
